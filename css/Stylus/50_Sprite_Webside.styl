body
	background-color #e82231
	font 16px Arial 
	padding 0px
	margin 0px
header
	background-color #fff
	height 150px
	margin 0px
header figure.logo
	background #fff url(../imgs/sprite-web.png) no-repeat
	border-bottom 4px solid rgba(0,0,0,0.2)
	background-position -274px -34px
	height 90px
	margin 0px
	width 244px	
nav 
	position relative	
	left 600px
	top -60px	
	width 900px
nav li
	background-color #e82231
	border-bottom 4px solid rgba(0,0,0,0.2)
	color #fff
	display inline-block
	vertical-align top
	margin-left -80px
	padding 30px 40px
	text-align center
	width 120px
nav li:hover
	background-color #CB390E
	border-bottom 4px solid
	cursor pointer
section
	width 1024px
	margin 20px auto
	padding 10px
section aside
	display inline-block
	vertical-align top
section aside.cleft
	width 640px
section aside.cleft article
	background-color #fff
	padding 10px
	margin-bottom 4px
section aside.cleft h3
	color red
	font-style justify
	border-bottom 2px solid red
	font 16px ALGERIAN
section aside.cleft article p
	text-align justify	
section aside.cleft article p::first-letter
	color red
	font-size 1.5em	
section aside.cleft article figure.box
	background #fff url(../imgs/sprite-web.png) no-repeat
	background-position -24px -262px
	height 210px
	width 470px
section aside.cright 
	width 360px	
section aside.cright ul.years
	list-style none
	margin 0px
section aside.cright ul.years li
	background-color #fff
	padding 20px 10px
	margin-bottom 10px
	position relative
section aside.cright ul.years li span.icon
	background #fff url(../imgs/sprite-web.png) no-repeat
	background-position -362px -140px
	display inline-block
	height 90px
	width 90px
section aside.cright ul.years li em
	display inline-block
	position relative
	left 10px
	top -38px	
footer 
	background-color #000
	color #fff
	padding 10px
	text-align center
footer figure.logodark
	background #000 url(../imgs/sprite-web.png) no-repeat
	background-position -24px -478px
	margin 10px auto
	height 110px
	width 470px
			
		
			