body
	background-color #2DFF03
	color #FA0505
	font 16px Arial
section
	background-color #06F5F2	
	border 10px solid blue
	padding 20px
	margin 20px auto
	width 800px
nav a:link
nav a:visited
	text-decoration none
	display inline-block
	background-color yellow
	color #FD4911
	padding 20px 10px
	width 176px
	text-align center
nav a:hover
	background-color #fff
	border 4px solid yellow
	color red
nav a:active
	background-color #FED308
	border 4px solid blue
	color #fff
/* Pseudoclases para elementos de formulario*/
&::-webkit-input-placeholder
	color lime
input
	outline none
	display block	
	padding 20px
	border none
	width 96%
	color #fff
	font-size 1.2em
input:focus
	background-color lime
	color red
/* Insertar contenido antes-despues*/
div.box::after
div.box::before
	content ''
	position absolute
div.box
	background-color lime
	height 200px
	position relative
	top 0 
	left 0
	width 200px
div.box::after	
	background-color lime
	height 100px
	top 0px
	left 100px
	width 100px	
div.box::before	
	background-color lime
	height 100px
	top 100px
	left 0px
	width 100px	
/* Prmera letra y primera linea*/
p::first-letter
	color lime
	font-weight bolder
	font-size 3em
p::first-line
	color lime	
			