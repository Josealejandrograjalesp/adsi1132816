doctype
html(lang="es")
  head
    meta(charset="UTF-8")
    title Estructura (Semántica)
    style(rel='stylesheet').
      body {
        background-color: yellow;
        color: lime;
        font: 16px Tahoma;
      }
      main {
        background-color: rgba(0,0,0, 0.5);
        margin: 0px auto;
        padding: 20px;
        width: 800px;
      }
      header figure{
        text-align: center;
      }
      nav li {
        background-color: yellow;
        color: lime;
        display: inline-block;
        list-style: none;
        padding: 20px;
        text-align: center;
        width: 156px;
        transition: all 0.1s ease-in;
      }
      nav li:hover, 
      nav li:hover a{
        background-color: white;
        color: lime;
      }
      nav li a {
        color: lime;
        display: block;
        height: 100%;
        font-size: 20px;
        text-decoration: none;
        text-transform: uppercase;
        letter-spacing: 2px;
        width: 100%;
      }
      h1 {
        font-weight: normal;
        font-size: 36px;
        letter-spacing: 2px;
      }
      article, aside {
        display: inline-block;
        line-height: 24px;
        vertical-align: top;
        text-align: justify;
      }
      article {
        width: 500px;
      }
      aside {
        width: 290px;
      }
      footer p {
        text-align: center;
      }
