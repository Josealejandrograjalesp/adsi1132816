
body
html
	background-color #6dc0eb
	background-image linear-gradient(to right, rgba(0,0%,0%,0.07) 50%, transparent 0)
	background-size  120px 100%
	background-position center center
body
	font 16px Arial
	color #aaebff
	
main
	margin 30px auto
	width 800px
	text-align center
	
	h1
		font-size 4em
		text-shadow 0px 20px 10px #3b6e87
	
	section#ventana
		box-shadow 0px 2px 10px #3b6e87
		height 480px
		width 640px	
		margin 0px auto
		overflow hidden 
		position relative
		
		div
			height 480px
			width 1280px
			background-position center center
			background-repeat repeat-x
			position absolute
		div.cielo
			animation 14s animParallax linear infinite
			background-image url(../imgs/parallax/back.png)
			z-index 1	
		div.montanas
			animation 8s animParallax linear infinite
			background-image url(../imgs/parallax/middle.png)
			z-index 2
		div.carretera
			animation 4s animParallax linear infinite
			background-image url(../imgs/parallax/front.png)
			z-index 3	
		div.personaje
			width 640px
			background-repeat no-repeat
			background-position center 380px
			background-image url(../imgs/parallax/mario.gif)	
			z-index 4
			transition all 0.5s	
			&:hover
				background-position center 300px			
@keyframes animParallax
	from
		background-position 0px 0px 
	to
		background-position -1280px 0px 
					
	    
			